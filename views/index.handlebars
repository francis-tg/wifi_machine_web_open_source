    <script>
        //$('#expirebtn').tooltip('show')
        //document.querySelector(".screen-add")
        const regImg = /image/
        const regVideo = /video/
        let url;

        document.querySelector('#files').addEventListener("change", (e) => {
            const Files = e.target.files;
            for (key in Files) {
                const file = Files[key]
                setTimeout(async () => {
                    const urlBlob = await URL.createObjectURL(file);
                    if (regImg.test(file.type)) {
                        url = `<img  id="preview" src="${urlBlob}" alt="preview"/>`
                        document.querySelector('.preview').innerHTML += url
                    } else if (regVideo.test(file.type)) {
                        url = `<video id="preview" src="${urlBlob}" alt="preview"/>`
                        document.querySelector('.preview').innerHTML += url
                    }
                }, 1500)

            }

        }, false)

    </script>